set number              " 行番号
set expandtab           " タブを空白に
set tabstop=2          
set shiftwidth=2        
set autoindent          " 自動インデント
set ignorecase          " 検索で大小文字無視
set smartcase           
set hlsearch            " 検索ハイライト
syntax enable           " シンタックスハイライト
inoremap jj <Esc>      " jjでESC
